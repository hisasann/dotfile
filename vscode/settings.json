{
    "editor.suggestSelection": "first",
    "editor.formatOnSave": true,
    // ミニマップを非表示にする
    "editor.minimap.enabled": false,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "npm.enableScriptExplorer": true,
    //--------------------------------------------
    // vim
    //--------------------------------------------
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    // jj でインサートモードから抜ける
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    // ノーマルモードのキーバインド
    "vim.normalModeKeyBindingsNonRecursive": [
        // カーソルを一番左に移動する
        {
            "before": [
                "1"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "<space>",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        // カーソルを一番右に移動する
        {
            "before": [
                "9"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "<space>",
                "l"
            ],
            "after": [
                "$"
            ]
        },
        // 左のタブに移動
        {
            "before": [
                "g",
                "h"
            ],
            "after": [
                "g",
                "T"
            ]
        },
        // 右のタブに移動
        {
            "before": [
                "g",
                "l"
            ],
            "after": [
                "g",
                "t"
            ]
        },
        // セミコロンでもコロンの機能を呼ぶ
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
        // Bind ZZ to the vim command :wq (save and close the current file):
        {
            "before": [
                "Z",
                "Z"
            ],
            "commands": [
                ":q!"
            ]
        },
        {
            "before": [
                "<space>",
                "q"
            ],
            "after": [
                ":",
                "q",
                "!",
                "<Enter>"
            ]
        },
        // Bind : to show the command palette:
        {
            "before": [
                ":"
            ],
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                "bookmarks.list"
            ]
        },
        // https://newbedev.com/vs-code-vim-jump-to-file-explorer-like-nerdtree
        {
            "before" : [
                "<leader>",
                "a"
            ],
            "commands" : [
                "workbench.view.explorer"
            ]
        },
        {
            "before": [
                "<Space>",
                "s",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
    ],
    // ヴィジュアルモードのキーバインド
    "vim.visualModeKeyBindingsNonRecursive": [
        // Bind p in visual mode to paste without overriding the current register
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
        // Bind > and < in visual mode to indent/outdent lines (repeatable)
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        // ビジュアルモード時vで行末まで選択する（うまく動かない）
        {
            "before": [
                "v"
            ],
            "after": [
                "$",
                "h"
            ]
        }
    ],
    // leader を <space> にする、もとは <leader> です
    "vim.leader": "<space>",
    "window.zoomLevel": 0,
    "tabnine.experimentalAutoImports": true,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Dracula",
    "editor.cursorBlinking": "expand",
    "vscode-edge-devtools.mirrorEdits": true,
    "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
    // カーソル移動をNERDTreeと同じかんじに
    "workbench.list.keyboardNavigation": "simple",
    // ファイルプレビューは無効化(開かれたファイルタブを永続化)
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // macrosプラグインを使って、ファイルを開くと同時にサイドバーを閉じるコマンドを登録
    "macros": {
        "selectAndToggleSidebar": [
            "list.select",
            "workbench.action.toggleSidebarVisibility"
        ]
    }
}
